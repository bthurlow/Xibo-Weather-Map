{% extends "module-form-settings.twig" %}
{% import "forms.twig" as forms %}

{% block moduleFormFields %}
    {% set title %}{% trans "OpenWeatherMaps API Key" %}{% endset %}
    {% set helpText %}{% trans "Enter your OpenWeatherMaps API Key" %}{% endset %}
    {{ forms.input("owmApiKey", title, module.getSetting("owmApiKey"), helpText, "", "required") }}

    {% set title %}{% trans "MapBox API Key" %}{% endset %}
    {% set helpText %}{% trans "Enter your MapBox API Key" %}{% endset %}
    {{ forms.input("mbApiKey", title, module.getSetting("mbApiKey"), helpText) }}

    {% set title %}{% trans "Google Maps API Key" %}{% endset %}
    {% set helpText %}{% trans "Enter your Google Maps API Key" %}{% endset %}
    {{ forms.input("gmApiKey", title, module.getSetting("gmApiKey"), helpText) }}

    {% set title %}{% trans "Cache Period" %}{% endset %}
    {% set helpText %}{% trans "Enter the number of minutes you would like to cache requests for" %}{% endset %}
    {{ forms.input("cachePeriod", title, module.getSetting("cachePeriod", 15), helpText) }}
{% endblock %}
